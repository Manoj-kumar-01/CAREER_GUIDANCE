body {
    background: #000;
    min-height: 100vh;
    overflow: hidden;
    font-family: 'Arial', sans-serif;
}

.wrapper {
    position: relative;
    min-height: 100vh;
    overflow: hidden;
    animation: animate 10s linear infinite;
}

@keyframes animate {
    0% {
        filter: hue-rotate(0deg);
    }
    100% {
        filter: hue-rotate(360deg);
    }
}

.hex {
    display: inline-flex;
    margin-top: -32px;
    margin-left: -50px;
    overflow: hidden;
}

.hex:nth-child(even) {
    margin-left: 1px;
}

.hexagon {
    position: relative;
    background-color: #0a0a0a; /* Darker hexagon color */
    height: 110px;
    width: 100px;
    margin: 1px;
    transition: 0.5s;
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
    box-shadow: 0 0 10px rgba(0, 255, 0, 0.1); /* Subtle glow */
}

.hexagon::before {
    position: absolute;
    content: '';
    height: 100%;
    width: 50%;
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.02), rgba(255, 255, 255, 0.05));
    transition: 0.5s;
}

.hexagon:hover {
    background: #1a1a1a; /* Slightly lighter on hover */
    border:2px solid lightgreen;
    box-shadow: 0px 0px 20px green;/* Stronger glow on hover */
    transform: scale(1.1); /* Slight zoom effect */
    z-index: 1;
}

/* Form Container Styling */
.form-container {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(10, 10, 10, 0.9); /* Darker semi-transparent background */
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 0 30px rgba(0, 255, 0, 0.3); /* Green glow effect */
    z-index: 10;
    width: 90%;
    max-width: 400px;
    border: 1px solid rgba(0, 255, 0, 0.1); 
}

.form-container h2 {
    color: #00ff00; /* Bright green */
    text-align: center;
    margin-bottom: 1.5rem;
    font-size: 1.8rem;
    font-weight: bold;
    text-shadow: 0 0 10px rgba(0, 255, 0, 0.5); /* Text glow */
}


.input-group {
    position: relative;
    margin-bottom: 1.5rem;
}

.input-group input {
    width: 100%;
    padding: 10px;
    background: transparent;
    border: 1px solid rgba(0, 255, 0, 0.3); /* Green border */
    border-radius: 5px;
    color: #00ff00; /* Green text */
    font-size: 1rem;
    outline: none;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.input-group input:focus {
    border-color: #00ff00; 
    box-shadow: 0 0 10px rgba(0, 255, 0, 0.5); 
}

.input-group label {
    position: absolute;
    top: 50%;
    left: 10px;
    transform: translateY(-50%);
    color: rgba(0, 255, 0, 0.5); 
    font-size: 1rem;
    pointer-events: none;
    transition: all 0.3s ease;
}

.input-group input:focus ~ label,
.input-group input:not(:placeholder-shown) ~ label {
    top: 0;
    left: 10px;
    font-size: 0.8rem;
    color: #00ff00; 
    background: rgba(10, 10, 10, 0.9); 
    padding: 0 5px;
}


button {
    width: 100%;
    padding: 10px;
    background: linear-gradient(45deg, #00ff00, #00cc00);
    border: none;
    border-radius: 5px;
